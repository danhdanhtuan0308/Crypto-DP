{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BTC Dashboard AI Context",
  "type": "object",
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "timeline": {"type": "string"},
        "now_est": {"type": "string"},
        "rows_window": {"type": "integer"},
        "rows_sent": {"type": "integer"}
      },
      "required": ["timeline", "now_est", "rows_window", "rows_sent"]
    },
    "latest": {"type": ["object", "null"]},
    "summary": {"type": "object"},
    "hourly": {"type": "array", "items": {"type": "object"}},
    "rows": {"type": "array", "items": {"type": "object"} }
  },
  "required": ["meta", "latest", "summary", "hourly", "rows"]
}
